<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="15dp"
    tools:context=".fragment.AccountFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_avt"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="150dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_account_avatar"
                android:src="@drawable/baseline_self_improvement_24"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_account_email"
            android:layout_toRightOf="@+id/cardview_avt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bungee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admin_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            app:backgroundTint="@color/black"
            android:text="ĐĂNG XUẤT" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>